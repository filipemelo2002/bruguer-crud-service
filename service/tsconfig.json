{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@entities/*": [
        "./entities/*"
      ],
      "@mappers/*": [
        "./mappers/*"
      ],
      "@repositories/*": [
        "./repositories/*"
      ],
      "@db/*": [
        "./db/*"
      ],
      "@tests/*": [
        "./tests/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
