{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": false,
    "sourceMap": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "paths": {
      "@entities/*": [
        "./entities/*"
      ],
      "@mappers/*": [
        "./mappers/*"
      ],
      "@repositories/*": [
        "./repositories/*"
      ],
      "@db/*": [
        "./db/*"
      ],
      "@tests/*": [
        "./tests/*"
      ],
      "@inversify/*": [
        "./inversify/*"
      ],
      "@view-model/*": [
        "./view-model/*"
      ],
      "@errors/*": [
        "./errors/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
